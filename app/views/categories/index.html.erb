<h1>categories . . . </h1>


<table>

  <thead>
    <tr>
      <th>Category Name</th>
      <th>Created At</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= time_ago_in_words(category.created_at) %></td>
        <td><%= link_to 'show', category_path(category) %></td>


      </tr>
    <% end %>
  </tbody>

</table>
